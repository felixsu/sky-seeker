<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/container_navigationHeader"
                android:layout_width="match_parent"
                android:layout_height="@dimen/nav_header_height"
                android:background="@drawable/side_nav_bar"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/icon_navigationHeader"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:src="@android:drawable/sym_def_app_icon"
        app:civ_border_color="#EEEEEE"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="10"
        app:civ_shadow_color="#8BC34A"/>

    <TextView
        android:layout_toEndOf="@id/icon_navigationHeader"
        android:id="@+id/label_navigationHeaderGreetings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/activity_default_padding"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/nav_header_vertical_spacing"
        android:textSize="18sp"
        android:text="Good Morning"/>

    <TextView
        android:layout_toEndOf="@id/icon_navigationHeader"
        android:layout_below="@id/label_navigationHeaderGreetings"
        android:id="@+id/label_navigationHeaderName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/activity_default_padding"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:textSize="24sp"
        android:text="Felix"/>

    <TextView
        android:layout_alignParentBottom="true"
        android:id="@+id/label_navigationHeaderEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:text="android.studio@android.com" />

</RelativeLayout>
